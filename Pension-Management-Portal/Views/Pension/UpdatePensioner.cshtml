@model Pension_Management_Portal.Models.Pensioner
@{
    ViewData["Title"] = "UpdatePensioner";
}

<h1>UpdatePensioner</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdatePensioner">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dateofbirth" class="control-label"></label>
                <input asp-for="Dateofbirth" class="form-control" />
                <span asp-validation-for="Dateofbirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pan" class="control-label"></label>
                <input asp-for="Pan" class="form-control" />
                <span asp-validation-for="Pan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AadharNumber" class="control-label"></label>
                <input asp-for="AadharNumber" class="form-control" />
                <span asp-validation-for="AadharNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaryEarned" class="control-label"></label>
                <input asp-for="SalaryEarned" class="form-control" />
                <span asp-validation-for="SalaryEarned" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Allowances" class="control-label"></label>
                <input asp-for="Allowances" class="form-control" />
                <span asp-validation-for="Allowances" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PensionType" class="control-label"></label>
                @Html.DropDownList("PensionType",
                 new SelectList(Enum.GetValues(typeof(Pension_Management_Portal.Models.PensionTypeValue))),
                 "Select Type", new { @class = "form-control" })
                <span asp-validation-for="PensionType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                <input asp-for="AccountNumber" class="form-control" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankName" class="control-label"></label>
                <input asp-for="BankName" class="form-control" />
                <span asp-validation-for="BankName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankType" class="control-label"></label>
                @Html.DropDownList("BankType",
                 new SelectList(Enum.GetValues(typeof(Pension_Management_Portal.Models.BankType))),
                 "Select Type", new { @class = "form-control" })
                <span asp-validation-for="BankType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Details" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

